@model Model.Tables.Category

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "Viewing details of a Category";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Viewing details of a Category
    </div>
    <div class="panel-body"
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
    <br />
        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-user"></i>

            </span>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new {@class ="form-control",disabled ="disabled"}})

        </div>
    </div>

    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-info" })
        @Html.ActionLink("Return Listing Category", "Index", null, new { @class = "btn btn-info" })

    </div>
</div>

@Html.Partial("~/views/Products/_BySupplier.cshtml", Model.Products.ToList())


@section ScriptPage{

    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liCategories').addClass("active");
        });

    </script>
}