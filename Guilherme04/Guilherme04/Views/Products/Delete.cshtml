@model Model.Register.Product

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "Viewing Product details to be removed";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Viewing Product details to be removed
    </div>
    <div class="panel-body">
        @Html.Partial("~/Views/Products/_PartialDetailsContentPanel.cshtml", Model)
        </div>
        
    <div class="panel-footer panel-info">
        <a href="#" class="btn btn-info" data-toggle="modal"data-target="#deleteConfirmationModal">To Remove</a>
        @Html.ActionLink("Return to List", "Index", null, new { @class = "btn btn-info"})
  </div>
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1"
     role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss ="modal" aria-hidden="true">&times;
                </button>
                <h4 class="modal-title">Confirmation of exclusion from Product</h4>
            </div>
            <div class="modal-body">
                <p>
                    You are about to remove the Product Of the Cadastre.
   
                </p>
                <p>
                    <strong>
                        Are You sure you want to proceed?
                    </strong>
                </p>
    @using (Html.BeginForm("Delete", "Products", FormMethod.Post, new { @id = "delete-form", role = "form" }))
    {
        @Html.HiddenFor(m => m.ProductId)
        @Html.AntiForgeryToken()
    }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" onclick="$('#delete-form').submit();">
        Yes, delete this Product.
        </button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">
        No, do not delete this product.
        </button>
       </div>
    </div>
   </div>
</div>



@section ScriptPage{

    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProducts').addClass("active");
        });

    </script>
}

